@model FirebaseRealtimeDatabaseCRUD.Models.Notes
@{
    ViewData["Title"] = "Note Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">

    <div class="form-group">
        <input asp-for="note_id" class="form-control" hidden />
    </div>

    <div class="form-group">
        <label class="control-label">Lesson Name</label>
        <input asp-for="lesson_name" class="form-control" />
        <span asp-validation-for="lesson_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Note 1</label>
        <input asp-for="note1" class="form-control" />
        <span asp-validation-for="note1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Note 2</label>
        <input asp-for="note2" class="form-control" />
        <span asp-validation-for="note2" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Update</button>
</form>