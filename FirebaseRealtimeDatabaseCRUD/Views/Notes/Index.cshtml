@using FirebaseRealtimeDatabaseCRUD.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <a asp-action="Create" class="btn btn-primary">Create New Notes</a>
</div>
<div class="form-group">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Lesson Name</th>
            <th>Note 1</th>
            <th>Note 2</th>
            <th class="text-center">Details</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.lesson_name</td>
                <td>@x.note1</td>
                <td>@x.note2</td>
                <td class="text-center"><a href="/Notes/Detail/@x.note_id" class="btn btn-secondary">Details</a></td>
            </tr>
        }
    </table>
</div>
